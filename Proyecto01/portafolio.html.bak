    <section class="intereses">

        <div id="titleIntereses">
            <!-- Seccion par la parte de intereses -->
            <div>
                <p>
                    INTERESES
                </p>
            </div> 
        </div>

        <div id="flexContainerIntereses">
                <!-- en el css modificar sus posiciiones para que quede una alado de otra,
                tantos las imagenes como las descripciones -->
            
            <div id="interes1">

                <div id="imagen1"> 
                <img class="Icono" src="interes.jpg">
                </div>

                <div id="descripcion1">
                descripciondddd      
