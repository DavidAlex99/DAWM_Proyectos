    <section class="contactos">
        <!-- Seccion para el contacto -->
        <div>
            <p>
                    CONTACTOS
            </p>   
        </div>
        
        <article>
            <div id="containerIconosLogos">
                <!-- div para poner los iconos de las redes sociales -->
                <!-- En cada div hijo se pone cada icoo de la red social -->
                <div class="containerLogo">
                    <img class="logo" src="facebook.jpg">
                </div>
                
                <div class="containerLogo">
                    <img class="logo" src="twitterLogo.png">
                </div>
                
                <div class="containerLogo">
                    <img class="logo" src="instagramLogo.png">
                </div>
            </div>
            
            <div id="cuadrosContacto">
                <!-- para cada una de las cajas en donde va a estar la informacion -->
                <div id="contactBox1">
                    This div element has a top margin of 100px, a right margin of 150px, a bottom margin of 100px, and a left margin of 80px
                </div>
                
                <div id="contactBox2">
                    This div element has a top margin of 100px, a right margin of 150px, a bottom margin of 100px, and a left margin of 80px
                </div>
                
