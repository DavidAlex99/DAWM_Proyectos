    </div>

    <section class="Fondo">
        <!-- Seccion donde se va a poner la imagen -->
        <img class="imgFondo" src="fondo.jpg">
    </section>    
    
    <section class="habilidades">
        <!-- Seccion para la parte de ahbilidades -->
